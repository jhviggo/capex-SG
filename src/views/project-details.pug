doctype html
html
  head
    title CapEx system
    link(rel="stylesheet", type="text/css", href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Roboto&display=swap")
    link(rel="stylesheet", type="text/css", href="/css/styles.css")
  body
    div(class="header")
      div(class="link-button")
        a(href="/add/project") Add project
      div(class="link-button")
        a(href="/add/developer") Add Developer
      div(class="link-button")
        a(href="/") Back to overview
    div(class="content")
        //checkbox-container should probably have a better name
        div(class="checkbox-container")
            div
              h1= data.name
              p= 'Estimated hours: ' + data.estimatedHours
              p= 'Workers: ' + data.developers.length
              p= 'Duration: ' + data.weeks.length
              p= 'Red weeks: ' + data.redWeeks.length
            div
              h1= 'Developers'
              each developer in data.developers
                p= developer.name
