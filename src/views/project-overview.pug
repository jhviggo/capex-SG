doctype html
html
  include includes/header.pug
  body
    div(class="header")
      div(class="link-button")
        a(href="/add/project") Add project
      div(class="link-button")
        a(href="/add/developer") Add Developer
    div(class="content")
      each project in projects
        a(href="/project-details/" + project.docId class="project-title")= project.name
        div(class="week-grid")
          each week, index in project.weeks
            a(href="/" + project.docId + "/" + index) 
              div(class="week" class=week.class class=week)
                p= 'W' + index