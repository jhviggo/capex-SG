doctype html
html
  include includes/header.pug
  script(src="/js/addDeveloper.js")
  body
    div(class="header")
      div(class="link-button")
        a(href="/") Back to overview
    div(class="content")
      h1 Add new developer

      form(class="input-container", action="/add/developer", method="POST")
        label(for="name") name
        input(type="text", name="name", required)

        label(for="status") Status
        input(type="text", name="status", required)

        label(for="rank") Rank
        input(type="text", name="rank", required)

        button(class="plus", type="button", onclick="addVacationInput()") +
        div(id="vacation-container" class="input-container")

        
        button(type="submit") Add developer